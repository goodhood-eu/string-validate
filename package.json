{
  "name": "string-validate",
  "description": "Validates strings",
  "author": "Nebenan.de <max@nebenan.de>",
  "license": "MIT",
  "type": "module",
  "repository": "good-hood-gmbh/string-validate",
  "bugs": "https://github.com/good-hood-gmbh/string-validate/issues",
  "version": "3.7.0",
  "files": [
    "lib"
  ],
  "keywords": [
    "validate",
    "string validation"
  ],
  "module": "lib/index.esm.js",
  "main": "lib/index.js",
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "reinstall": "rm -rf node_modules package-lock.json && npm install",
    "check": "npm test && npm run lint && echo \"\\033[0;32mReady to publish\\033[0m\"",
    "clean": "rm -rf ./lib/ || exit 1",
    "prepublishOnly": "npm run check && npm run clean && npm run build",
    "lint": "eslint ./",
    "lint:fix": "eslint --fix ./",
    "lint:tofile": "eslint --no-color -o ./eslint-report.log ./",
    "test": "npm run build && TZ='GMT' mocha \"test/**/*.js\"",
    "test:tofile": "npm run build && TZ='GMT' mocha --no-colors -R spec \"test/**/*.js\" 2>&1 | tee test-report.log"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/plugin-transform-runtime": "^7.19.1",
    "@babel/plugin-transform-strict-mode": "^7.18.6",
    "@babel/preset-env": "^7.19.4",
    "@rollup/plugin-babel": "^6.0.0",
    "@rollup/plugin-commonjs": "^23.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "babel-plugin-add-module-exports": "^1.0.4",
    "browserslist-config-nebenan": "^1.0.0",
    "chai": "^4.3.6",
    "eslint": "^8.25.0",
    "eslint-config-nebenan-base": "^2.0.1",
    "mocha": "^10.1.0",
    "rollup": "^3.2.2"
  }
}
