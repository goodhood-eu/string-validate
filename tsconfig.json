{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "allowJs": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "lib",
    "declarationDir": "lib/types",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "**/lib",
    "test/**"
  ]
}
